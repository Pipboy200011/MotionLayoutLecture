<?xml version="1.0" encoding="utf-8"?>
<com.mw2c.pipboy200011.motionlayoutlecture.collapsingwithmotion.CollapsibleToolbar android:id="@+id/motionLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:minHeight="50dp"
    app:layoutDescription="@xml/collapsing_with_motion_example"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed"
    app:showPaths="true">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        android:src="@drawable/millenium_falcon" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Millenium Falcon"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <TextView
        android:id="@+id/sub_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star Destroyer"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

</com.mw2c.pipboy200011.motionlayoutlecture.collapsingwithmotion.CollapsibleToolbar>